{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'File'}, 'File') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            <a href="{{ path('drive_file') }}"> {{ '%entity% list'|trans({'%entity%': 'File'}, 'File') }}</a>
            /
            {{ 'File' | trans({}, 'File') }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <div class="box-tools">
                    <a class="btn btn-link btn-sm" href={{ path('drive_folder_new') }}>
                        <i class="fa fa-plus"></i> {{ 'Create a new %entity%'|trans({'%entity%': 'Folder'}, 'Folder') }}
                    </a>
                    <a class="btn btn-link btn-sm" href={{ path('drive_file_new') }}>
                        <i class="fa fa-plus"></i> {{ 'Create a new %entity%'|trans({'%entity%': 'File'}, 'File') }}
                    </a>
                </div>
            </div>
            <div class="box-body">
                {{ include('FlowerDriveBundle:folder:drive.html.twig', {folders:folders, files:files}) }}
            </div>
            <div class="box-footer">

            </div>
        </div>
    </section>


{% endblock %}