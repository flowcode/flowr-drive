{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% edit'|trans({'%entity%': 'File'}, 'File') }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ include('FlowerDriveBundle:Folder:breadcumbs.html.twig',{folder:folder}) }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <div class="box-tools">
                    <a class="btn btn-link btn-sm" href={{ path('drive_folder_new', {'parent_id':folder.id}) }}>
                        <i class="fa fa-plus"></i> {{ 'Create folder here'|trans({}, 'Folder') }}
                    </a>
                    <a class="btn btn-link btn-sm" href={{ path('drive_file_new', {'folder_id':folder.id}) }}>
                        <i class="fa fa-upload"></i> {{ 'Upload file here'|trans({}, 'File') }}
                    </a>
                </div>
            </div>
            <div class="box-body">
                {{ include('FlowerDriveBundle:folder:drive.html.twig', {folders:folders, files:files}) }}
            </div>
            <div class="box-footer">

            </div>
        </div>
    </section>


{% endblock %}